			"parameter": "StateNo",
			"value": ["ステート番号"],
			"type": ["int"],
			"description": "<p>Attrの攻撃を受けたときに移行するステートを指定します。-1を指定すると、HitOverrideそのものが機能しなくなります。</p>",
			"min_value": [""],
			"max_value": [""],
			"parameter_type": "optional",
			"default_value": ["-1 ;ステート移行しない。"],
			"load_priority": ["2"]
		},
