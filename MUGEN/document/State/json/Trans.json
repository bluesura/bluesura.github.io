				"[StateDef -2]",
				"[State ]",
				"Type                       = Null",
				"Trigger1                   = !var(10)",
				"Trigger1                   = var(10):=1",
				"Trigger1                   = var(11):=1",
				"[State ]",
				"Type                       = Null",
				"Trigger1                   = var(10)>256",
				"Trigger1                   = var(11):=-1",
				"Trigger2                   = var(10)<1",
				"Trigger2                   = var(11):=1",
				"[State ]",
				"Type                       = Null",
				"Trigger1                   = var(11)=1",
				"Trigger1                   = var(10):=var(10)+3",
				"Trigger2                   = var(11)=-1",
				"Trigger2                   = var(10):=var(10)-3",
				"",
				"[State ,Trans]",
				"Type                       = Trans",
				"Trigger1                   = 1",
				"Trans                      = AddAlpha",
				"Alpha                      = var(10),125",
				"Persistent                 = 1",
				"IgnoreHitPause             = 0"
